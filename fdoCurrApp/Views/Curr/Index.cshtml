<script type="text/javascript">
     //$('#openELEC').hide();
                function closer(k) {
                    secilen=JSON.parse(k);

                    $('#openELEC').show();
                }

    var accesToken = localStorage.getItem("accesToken");
    var lec_id = localStorage.getItem("lec_id");
    var lec_name = localStorage.getItem("lec_name");
    var lec_surname = localStorage.getItem("lec_surname");

    if (accesToken == undefined || accesToken == "") {
        window.location.href = "/Login/Index";
    }

   
    $.ajax({
        url: "/Curr/List?id="+lec_id,
        type: "get",
        dataType: "JSON",
        headers: {
            'Content-Type': 'multipart/form-data',
            authorization: accesToken
        },
        success: function (data) {
            if (data.status == 200) {
               console.log(data);

               say=0;
               var secilen={
                    uniCode:"",
                    courseName:"",
                    credit:"",
                    ects:"",
                    semester:"",
                    curr_class:""
               }
               data.response.currList.forEach(k=>{
                    if (k.uniCode.search("ELEC") != -1 && say==0) {
                        secilen = {
                            uniCode: k.uniCode,
                            courseName: k.courseName,
                            credit: k.credit,
                            ects: k.credit,
                            semester: k.semester,
                            curr_class: k.curr_class
                        };
                        say++;
                   }
                    var ders = "<tr style='" + (k.uniCode.search("ELEC") != -1 ? "color: #000000;font-weight: bold !important;background: #ffb569; " : "color: #9b9999; ") + "' > "
                        + "<td>" + ((k.uniCode.search("ELEC")) != -1 ? "<a class='pointer' onclick='closer('" + JSON.stringify(k) + "')' style='font-weight: 900;text-decoration: none; '>" + k.uniCode + "</a>" : k.uniCode) + "</td>"
                            + "<td>" + k.courseName + "</td>"
                            + " <td>" + k.credit + "</td>"
                            + "<td>" + k.ects + "</td>"
                            + "</tr>";
                        $("#ders_" + k.semester + "_" + k.curr_class).append(ders);
                        

               })

                $("#selectCurrCourse").html(secilen.curr_class + '. Sınıf ' + (secilen.semester == 1 ? 'Güz' : 'Bahar') +" "+ secilen.uniCode+' (Kredi:'+secilen.credit+' - AKTS:'+secilen.ects+')')

                data.response.currElecStuCountList.forEach(m => {
                    
                    var ders = "<tr>"
                        + "<td><input type='checkbox' id = 'secmeliGrubu' name = 'secmeliGrubu'   /></td>" 
                        + "<td>" + (m.faculty) + "</td>"
                        + "<td>" + (m.department) + "</td>"
                        + "<td>" + (m.uniCode) + "</td>"
                        + "<td>" + (m.courseName) + "</td>"
                        + "<td>" + (m.credit) + "</td>"
                        + "<td>" + (m.ects) + "</td>"
                        + "<td>" + m.stuCount + "</td>"
                        + "<td>" + m.overallCount + "</td>"
                        + "</tr>";
                    $("#elec_list").append(ders);

                })

            }
            else {
                alert(data.message);
                window.location.href = "/Login/Index";
            }
        },
        error: function (xhr, desc, err) {


        }
    });





</script>
