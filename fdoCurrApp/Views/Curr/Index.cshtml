@model fdoCurrApp.Models.Curr;

@{
    ViewData["Title"] = "Müfredat Girişi";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<h4>Name</h4>
@Model.courseName

<h4>Uni Kodu</h4>
@Model.uniCode

<div class="container">

    <div class="row">   
    <div class="col-lg-6">   
    <table class="table">
        <thead>
            <tr>
                <th colspan="3">Güz Dönemi</th>
                <th colspan="2">1.sınıf</th>
            </tr>
        </thead>
        <tbody>            
            <tr>
                <td>Ders Kodu</td>
                <td>Ders Adı</td>
                <td>İEU Kredisi</td>
                <td>AKTS Kredisi</td>
                <td>İçerik Ekle</td>
            </tr>
            
           @for(var i=0;i<6;i++){
                <tr>
                    <td>ACC 100 @i</td>
                    <td>Matematik @i</td>
                    <td>3</td>
                    <td>4</td>
                    <td>-</td>
                </tr>
           }
        </tbody>
    </table>
    </div>

    <div class="col-lg-6">
        <table class="table">
            <thead>
                <tr>
                    <th colspan="3">Bahar Dönemi</th>
                    <th colspan="2">1.sınıf</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Ders Kodu</td>
                    <td>Ders Adı</td>
                    <td>İEU Kredisi</td>
                    <td>AKTS Kredisi</td>
                    <td>İçerik Ekle</td>
                </tr>
                <tr>
                    <td>ACC 100</td>
                    <td>Matematik</td>
                    <td>3</td>
                    <td>4</td>
                    <td>-</td>
                </tr>
                <tr>
                    <td>ELEC 001</td>
                    <td>Seçmeli Ders</td>
                    <td>3</td>
                    <td>5</td>
                    <td>+</td>
                </tr>
            </tbody>
        </table>
    </div>
    </div>
</div>
